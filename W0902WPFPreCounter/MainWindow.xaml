<Window x:Class="W0902WPFPreCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W0902WPFPreCounter"
        mc:Ignorable="d"
        Title="카운터" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/gundam1.jpg" Stretch="UniformToFill" TileMode="Tile" Opacity="0.7"/>
        </Grid.Background>
        <Button x:Name="BtnAdd" Content="증가" HorizontalAlignment="Left" Margin="368,217,0,0" VerticalAlignment="Top" FontSize="24" Click="OnAdd"/>
        <TextBlock x:Name="TextCount" HorizontalAlignment="Left" Margin="194,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="48" TextAlignment="Center" IsEnabled="False" Text="안녕하세요" Background="#FFEAE57B" Width="400"/>
        <Button x:Name="BtnSub" Content="감소" HorizontalAlignment="Left" Margin="368,272,0,0" VerticalAlignment="Top" FontSize="24" Click="OnSub" RenderTransformOrigin="0.583,2.126"/>

    </Grid>
</Window>
